<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_activated="true" >
            <shape
                android:shape="oval">
                <!-- 填充的颜色 -->
                <solid android:color="#0FE958" />
                <!-- padding：Button里面的文字与Button边界的间隔 -->
                <stroke
                    android:width="25dp"
                    android:color="#99BAC7C5"
                    />
            </shape>
        </item> <!-- 未点击时的颜色 -->
        <item android:state_activated="false" >
            <shape
                android:shape="oval">
            <!-- 填充的颜色 -->
            <solid android:color="#0F92E9" />
           <stroke
                android:width="25dp"
                android:color="#99BAC7C5"
                /></shape>
        </item> <!-- 点击后的颜色 -->
    </selector>

